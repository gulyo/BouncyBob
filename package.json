{
  "name": "bouncy-bob",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/gulyo/bouncy-bob.git"
  },
  "license": "MIT",
  "dependencies": {
    "jquery": "^3.4.1",
    "typescript-logging": "^0.6.4",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/jquery": "^3.3.31",
    "@types/node": "^12.12.9",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-server": "^3.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "favicons-webpack-plugin": "^1.0.2",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "nyc": "^14.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2",
    "typescript-plugin-css-modules": "^2.1.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "scripts": {
    "dev:start": "webpack-dev-server --mode development --config webpack.config.dev.ts --progress",
    "dev:build": "npm run preBuild && webpack --mode development --config webpack.config.dev.ts --progress",
    "prod:start": "webpack-dev-server --mode production --config webpack.config.prod.ts --progress",
    "prod:build": "npm run preBuild && webpack --mode production --config webpack.config.prod.ts --progress",
    "test": "jest --config jest.config.json",
    "testCoverage": "jest --config jest.config.json --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "stylelint": "stylelint \"src/**/*.scss\" --syntax scss --config .stylelintrc.json",
    "preBuild": "npm run format && npm run lint && npm run stylelint",
    "serveBuild": "http-server dist -p 8080 -o"
  }
}
