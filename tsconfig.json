{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.m(odule)?\\.scss$",
          "classnameTransform": "dashes"
        }
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
